<div class="home-header">
    {{#if search }}
    <h1>Procurando por <span>{{search}}</span></h1>
    {{#if thoughtsQtd }}
    <p>Foram encontrados <span>{{thoughtsQtd}}</span> pensamentos</p>
    {{else }}
    <p>Nenhum pensamento encontrado</p>
    {{/if }}
    {{else }}
    <h1>Todos os Pensamentos</h1>
    {{/if }}
    <form action="/" method="GET">
        <input type="text" name="search" value="{{ search }}" placeholder="EstÃ¡ Buscando por algo?">
        <input type="submit" class="btn" value="Pesquisar">
    </form>
</div>
<div class="order-container">
    <span>Ordenar por:</span>
    <form action="/" method="GET">
        <input type="hidden" name="search" value="{{ this.search }}">
        <input type="hidden" name="order" value="new">
        <button type="submit"><i class="bi bi-arrow-up"></i></button>
    </form>
    <form action="/" method="GET">
        <input type="hidden" name="search" value="{{ this.search }}">
        <input type="hidden" name="order" value="old">
        <button type="submit"><i class="bi bi-arrow-down"></i></button>
    </form>
    <a href="/">Limpar</a>
</div>
<div class="thoughts-container">
    {{#each thoughts }}
    <figure>
        <blockquote>
            "{{ this.title }}""
        </blockquote>
        <figcaption>Criado por:<span> {{this.User.name}}</span></figcaption>
    </figure>
    {{/each }}
</div>